# ============================================================================
# 환경 변수 설정 파일 템플릿
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값을 입력하세요
#
# 사용법:
#   cp .env.example .env
#   # 그 다음 .env 파일을 열어서 실제 비밀번호를 입력하세요
# ============================================================================

# PostgreSQL 데이터베이스 연결 정보
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/pulseticket
SPRING_DATASOURCE_USERNAME=your_postgres_username
SPRING_DATASOURCE_PASSWORD=your_postgres_password_here

# Redis 캐시 연결 정보
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=your_redis_password_here

# Redis 컨테이너 설정 (docker-compose용)
REDIS_PORT=6379

# 서버 포트 설정
SERVER_PORT=9080

# PostgreSQL 컨테이너 설정 (docker-compose용)
POSTGRES_DB=pulseticket
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password_here

# Grafana 설정
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=your_grafana_admin_username
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Loki 설정
LOKI_PORT=3100

# PostgreSQL 테스트 데이터베이스 설정 (docker-compose.test용)
TEST_POSTGRES_DB=pulseticket_test
TEST_POSTGRES_USER=your_test_postgres_username
TEST_POSTGRES_PASSWORD=your_test_postgres_password
TEST_POSTGRES_PORT=5432
TEST_POSTGRES_INTERNAL_PORT=5432

# Redis 테스트 캐시 설정 (docker-compose.test용)
TEST_REDIS_PORT=6379
TEST_REDIS_INTERNAL_PORT=6379
TEST_REDIS_PASSWORD=your_test_redis_password
